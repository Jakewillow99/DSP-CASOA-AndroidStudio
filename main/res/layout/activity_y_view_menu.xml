<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".yViewMenu">

    <!--<Spinner
        android:id="@+id/section_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />-->


    <LinearLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"

            android:text="WAIT TIME" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="USERNAME" />

        <Button
            android:id="@+id/basket"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="BASKET" />

    </LinearLayout>


    <HorizontalScrollView
        android:id="@+id/selectbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topbar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_starter"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Starters">
            </TextView>

            <TextView
                android:id="@+id/view_pasta"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Pasta and Salads">
            </TextView>

            <TextView
                android:id="@+id/view_grill"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Grill">
            </TextView>

            <TextView
                android:id="@+id/view_deserts"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Deserts">
            </TextView>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Test">
            </TextView>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Test">
            </TextView>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Test">
            </TextView>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Test">
            </TextView>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Test">
            </TextView>




        </LinearLayout>


    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="700dp"


                android:layout_alignParentTop="true"
                android:layout_marginTop="24dp">

            </ListView>

        </LinearLayout>

    </ScrollView>




</RelativeLayout>