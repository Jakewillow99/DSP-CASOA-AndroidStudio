<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp">

    <Button
        android:id="@+id/bask_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/bask_close"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ListView
                android:id="@+id/bask_display"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <TextView
                android:id="@+id/bask_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Price"
                android:layout_below="@+id/bask_display"/>


            <Button
                android:id="@+id/bask_set_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Table"
                android:layout_below="@+id/bask_total"/>


        </LinearLayout>

    </ScrollView>




</RelativeLayout>